@inject NavigationManager NavigationManager

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="alert alert-danger" role="alert">You are not authorized to access this resource.</div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += HandleLocationChanged;
        CheckForHash();
    }

    private void HandleLocationChanged(object? sender, LocationChangedEventArgs e) => CheckForHash();

    private void CheckForHash()
    {
        var fragment = new Uri(NavigationManager.Uri).Fragment;
        if (fragment.StartsWith("#/"))
        {
            var targetPath = fragment.Substring(2);
            // Evitar bucle infinito si ya estamos en esa ruta
            if (NavigationManager.ToBaseRelativePath(NavigationManager.Uri).Split('#')[0] != targetPath)
            {
                NavigationManager.NavigateTo(targetPath);
            }
        }
    }
}
