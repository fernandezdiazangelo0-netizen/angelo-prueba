@inject NavigationManager NavigationManager

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="alert alert-danger" role="alert">You are not authorized to access this resource.</div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="text-center py-5">
                    <i class="bi bi-exclamation-circle display-1 text-muted"></i>
                    <h2 class="mt-3 fw-bold">Page Not Found</h2>
                    <p class="text-muted">Sorry, we couldn't find what you were looking for.</p>
                    <a href="#/" class="btn btn-primary rounded-pill px-5 mt-2">Go Home</a>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
