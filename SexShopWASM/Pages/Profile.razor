@page "/profile"
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject NavigationManager NavigationManager

<div class="profile-container animate-up">
    <div class="row">
        <div class="col-md-4 text-center">
            <div class="profile-image-container mb-4 shadow-lg rounded-circle overflow-hidden mx-auto" style="width: 200px; height: 200px; border: 5px solid white;">
                <img src="https://ui-avatars.com/api/?name=User&background=880E4F&color=fff&size=512" class="img-fluid" alt="Profile Image">
            </div>
            <button class="btn btn-outline-primary rounded-pill mb-3">Upload Photo</button>
        </div>
        <div class="col-md-8">
            <div class="card glass p-4">
                <h2 class="mb-4 fw-bold text-primary">Your Profile</h2>
                <AuthorizeView>
                    <Authorized>
                        <div class="mb-3">
                            <label class="text-muted small text-uppercase fw-bold">Username</label>
                            <p class="h5">@context.User.Identity?.Name</p>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small text-uppercase fw-bold">Email Address</label>
                            <p class="h5">@context.User.Identity?.Name</p>
                            <span class="badge bg-success">Verified</span>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small text-uppercase fw-bold">Member Since</label>
                            <p class="h5">February 2026</p>
                        </div>
                        <hr />
                        <div class="d-flex gap-2 mt-4">
                            <button class="btn btn-primary px-4">Edit Profile</button>
                            <button class="btn btn-outline-secondary px-4">Security Settings</button>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-container {
        padding: 2rem 0;
    }
    .profile-image-container img {
        transition: transform 0.5s ease;
    }
    .profile-image-container:hover img {
        transform: scale(1.1);
    }
</style>
