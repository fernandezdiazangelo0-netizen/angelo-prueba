@inherits LayoutComponentBase

<div class="page">
    <header class="site-header sticky-top">
        <!-- Top Bar: Logo, Search, Actions -->
        <div class="top-bar py-3 bg-white border-bottom">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <span class="bi bi-heart-fill text-primary" style="font-size: 1.5rem; margin-right: 0.5rem;"></span>
                    <span class="fw-bold text-dark h4 mb-0">SexShop</span>
                </a>

                <!-- Search Bar -->
                <div class="flex-grow-1 mx-4 d-none d-md-block">
                    <div class="input-group">
                        <input type="text" class="form-control border-end-0" placeholder="What are you looking for?">
                        <button class="btn btn-primary text-white" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex align-items-center">
                    <AuthorizeView>
                        <Authorized>
                            <div class="dropdown me-3">
                                <button class="btn btn-link text-decoration-none text-dark dropdown-toggle d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="https://ui-avatars.com/api/?name=@context.User.Identity?.Name&background=880E4F&color=fff" class="rounded-circle me-2" style="width: 32px; height: 32px;" />
                                    <span>@context.User.Identity?.Name</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="#/profile"><i class="bi bi-person me-2"></i> My Profile</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-bag me-2"></i> My Orders</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><button class="dropdown-item text-danger" @onclick="Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</button></li>
                                </ul>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <a href="#/login" class="text-decoration-none text-dark me-3">
                                <i class="bi bi-person me-1"></i> Login
                            </a>
                            <a href="#/register" class="text-decoration-none text-dark">
                                <i class="bi bi-person-plus me-1"></i> Register
                            </a>
                        </NotAuthorized>
                    </AuthorizeView>
                    <a href="#/cart" class="text-dark position-relative">
                        <i class="bi bi-cart3 h5 mb-0"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary shadow-sm" style="font-size: 0.6rem;">
                            @CartService.GetTotalItems()
                        </span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Navigation Bar -->
        <div class="nav-bar bg-white shadow-sm">
            <div class="container">
                <NavMenu />
            </div>
        </div>
    </header>

    <main class="py-4 bg-light" style="min-height: 80vh;">
        <div class="container">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="alert alert-danger shadow-sm border-0 rounded-4 p-5 text-center glass animate-up">
                        <i class="bi bi-exclamation-triangle-fill display-1 text-danger mb-4"></i>
                        <h2 class="fw-bold text-dark mb-3">Something went wrong</h2>
                        <p class="text-muted mb-4">We encountered an unexpected error. Please try refreshing the page or contact support if the problem persists.</p>
                        <button class="btn btn-primary rounded-pill px-5" onclick="location.reload()">
                            <i class="bi bi-arrow-clockwise me-2"></i> Reload Page
                        </button>
                    </div>
                </ErrorContent>
            </ErrorBoundary>
        </div>
    </main>

    <footer class="bg-dark text-white py-4 mt-auto">
        <div class="container text-center">
            <p>&copy; 2026 SexShop. All rights reserved.</p>
        </div>
    </footer>
</div>

@inject NavigationManager NavigationManager
@inject IAuthService AuthService
@inject SexShopWASM.Services.ICartService CartService
@implements IDisposable

@code {
    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }

    private async Task Logout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login", true);
    }
}

